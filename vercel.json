{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "script.js",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/test-static", "destination": "server.js" },
    { "source": "/serve-index", "destination": "server.js" },
    { "source": "/debug", "destination": "server.js" },
    { "source": "/catch-all-debug/(.*)", "destination": "server.js" },
    { "source": "/api/(.*)", "destination": "server.js" },
    { "source": "/auth/(.*)", "destination": "server.js" },
    { "source": "/generate", "destination": "server.js" },
    { "source": "/schedule", "destination": "server.js" },
    { "source": "/preferences", "destination": "server.js" },
    { "source": "/scheduled-posts", "destination": "server.js" },
    { "source": "/post-to-linkedin", "destination": "server.js" },
    { "source": "/migrate", "destination": "server.js" },
    { "source": "/(.*)", "destination": "server.js" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "linkedinautomator-*.vercel.app"
        }
      ],
      "destination": "https://linkedinautomator.vercel.app/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.tailwindcss.com; connect-src 'self' https://api.stripe.com; frame-src https://js.stripe.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: http:"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "alias": ["linkedinautomator.vercel.app"]
} 